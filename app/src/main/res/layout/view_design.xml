<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_namabarang"
            android:id="@+id/tv_namabarang"/>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan: "/>

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_keterangan"
                android:id="@+id/tv_keterangan"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Tanggal: "/>

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_tanggal"
                android:id="@+id/tv_tanggal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:background="@drawable/rounded_bg_green"
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="tv_pemasukan"
                android:id="@+id/tv_pemasukan"/>
            <TextView
                android:textSize="14sp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_bg_warning"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="tv_pengeluaran"
                android:id="@+id/tv_pengeluaran"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_saldo_akhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_saldo_akhir"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:background="@drawable/rounded_bg_blue"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>